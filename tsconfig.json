{
  "compilerOptions": {
    "target": "ES6",
    "allowJs": true,
    "composite": true,
    "removeComments": true,
    "module": "commonjs",
    "jsx": "react-jsx",
    "skipLibCheck": true,
    "esModuleInterop": true,
    "strict": true,
    "alwaysStrict": true,
    "forceConsistentCasingInFileNames": true,
    "noImplicitAny": true,
    "sourceMap": true,
    "isolatedModules": true,
    "baseUrl": ".",
    "outDir": "dist",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "paths": {
      "*": ["node_modules/*"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "**/*/dist", "**/*/build"],
  "references": [
    {
      "path": "./packages/dramalab-core"
    },
    {
      "path": "./packages/repraxis-js"
    },
    {
      "path": "./packages/tdrs-js"
    }
  ]
}
